@model IEnumerable<CRUDInventoryQuick.Models.ASPNETUSERROLE>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create" class="btn btn-sm btn-info"><i class="bi bi-bookmark-plus"></i>Agregar Rol</a>
</p>
<table id="Tablas" class="table table-hover table-bordered" style="width:100%">
    <thead class="table-primary">

        <tr>
            <th width="50">
                @Html.DisplayNameFor(model => model.AspNetRoleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetRoleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td align="right">
                <a asp-action="Edit" asp-route-id="@item.AspNetRoleId" class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.AspNetRoleId" class="btn btn-sm btn-success" ><i class="bi bi-bar-chart"></i> </a> |
                <a asp-action="Delete" asp-route-id="@item.AspNetRoleId" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
